{
  "name": "poll-locale",
  "version": "1.0.0",
  "description": "Location census API",
  "main": "index.js",
  "repository": "https://github.com/emp-daisy/poll-locale.git",
  "author": "Jessica M <adajess01@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "babel-node -r node_modules/dotenv/config index.js",
    "start:dev": "nodemon --exec yarn start",
    "test": "jest --detectOpenHandles",
    "lint": "eslint ./src --ext .js --fix"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.4.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "jest": "^24.7.1",
    "supertest": "^4.0.2",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.22",
    "validator": "^10.11.0"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/client/",
      "__tests__/global/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "__tests__/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/",
      "!__tests__/"
    ],
    "globalTeardown": "<rootDir>/src/__tests__/global/cleanup.js"
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "ext": "js ts json",
    "ignore": [
      "*.test.ts",
      "*.test.js"
    ],
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  }
}
